<% if @post.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h1>トピック　：　　<%="#{@topic.title}"%></h1>

<table class="table container">
    <div class='row'>
<div class="col-8">
        <thead>
        <tr>
            <th>投稿</th>
        </tr>
    </thead>
    <tbody>
    <%@posts.each do |p|%>
        <tr>
            <td class='post'>ユーザー：<%=p.name%><br><br>
            <h3><%=p.body%></h3>
            <p class='post-created_at'><%=p.created_at%></p></td>
        </tr>
        <%end%>
    </tbody>
    </div>
        </div>
</table>

<div class='container'>
<%=form_for @post ,url: post_create_path do |f|%>
<%=f.text_field:body %>
<%=f.hidden_field:name, value: current_user.name %>
<%=f.submit '投稿',class:'btn btn-primary'%>
 <%= f.hidden_field :topic_id %>
 <%= f.hidden_field:user_id%>
<%end%>
    
</div>
